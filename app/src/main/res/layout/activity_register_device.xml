<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientregistermenu"
    tools:context="com.example.login.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="294dp"
            android:layout_height="159dp"
            app:srcCompat="@drawable/feicon" />

        <EditText
            android:id="@+id/deviceNameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_light"
            android:drawableStart="@android:color/holo_blue_bright"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="nombre del dispositivo"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="?android:attr/textColorHintInverse"
            android:textSize="21sp" />

        <Button
            android:id="@+id/registerDeviceButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Registrar dispositivo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>